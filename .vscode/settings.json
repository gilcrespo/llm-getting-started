{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "python.analysis.extraPaths": [
        "./src"
    ],
    "python.defaultInterpreterPath": ".venv/bin/python3",
    "python.formatting.provider": "black",
    "ruff.enable": true,
    "ruff.organizeImports": true
}
